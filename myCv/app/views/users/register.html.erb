<div class= "register_form">
	<h3>Register now</h3>
	  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
		<p>
			<%= f.label :UserName %>
		    <%= f.text_field :name %>
		</p>
		<p>
			<label>Email :</label>
			<%= f.text_field :email %>
		</p>
		<p>
			<label>Password :</label>
			<%= f.password_field :password %>
		</p>
		<p>
			<label>Address:</label>
			<%= f.text_field :address %>
		</p>
		<%= f.submit :Signup %>
	<% end %>

</div>